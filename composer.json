{
    "name": "dps",
    "description": "An on going experiment of combining the Slim 3 Framework with Vue.js.  Probably will evolve into a resusable SlimVue maybe.",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/oldusername91/dps",

    "require": {
        "php": "^7.2",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "twbs/bootstrap": "^4.1",
        "bryanjhv/slim-session": "~3.0",
        "components/jquery": "^3.3",
        "slim/csrf": "^0.8.2",
        "fortawesome/font-awesome": "^4.7",
        "doctrine/orm": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
